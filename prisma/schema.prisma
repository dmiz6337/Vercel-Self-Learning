generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String    @id @default(cuid())
  name      String?
  email     String?   @unique
  image     String?
  inquiries Inquiry[] // One-to-many relation
}

model Inquiry {
  id        String   @id @default(cuid())
  message   String
  createdAt DateTime @default(now())
  userId    String
  user      User?    @relation(fields: [userId], references: [id])
}